    <panel>
      <single>
        <title>Security Metrics</title>
        <search>
          <query>`nsindex` eventtype=ns_appfw host=$host$ vhost=$vhost$ clientip=$clientip$ action="$action$"   | iplocation clientip | search Country="$Country$" | stats count</query>
        </search>
