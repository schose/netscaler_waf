<form>
  <label>Security Dashboard</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="dropdown" searchWhenChanged="true" token="host">
      <label>Netscaler</label>
      <default>*</default>
      <search>
        <query>index=netscaler eventtype=ns_appfw | dedup host | sort host | table host</query>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </search>
      <choice value="*">all</choice>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="vhost">
      <label>Select vHost:</label>
      <default>*</default>
      <search>
        <query>index=netscaler eventtype=ns_appfw host=$host$ | top vhost</query>
      </search>
      <choice value="*">all</choice>
      <fieldForLabel>vhost</fieldForLabel>
      <fieldForValue>vhost</fieldForValue>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="Country">
      <label>Select Country:</label>
      <default>*</default>
      <search>
        <query>index=netscaler eventtype=ns_appfw host=$host$ vhost=$vhost$ | iplocation clientip | top Country | table Country</query>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </search>
      <choice value="*">all</choice>
      <fieldForLabel>Country</fieldForLabel>
      <fieldForValue>Country</fieldForValue>
      <initialValue>*</initialValue>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="clientip">
      <label>Select Client IP:</label>
      <default>*</default>
      <search>
        <query>index=netscaler eventtype=ns_appfw host=$host$ vhost=$vhost$ | iplocation clientip | search Country="$Country$" | top limit=100 clientip | table clientip</query>
      </search>
      <choice value="*">all</choice>
      <fieldForLabel>clientip</fieldForLabel>
      <fieldForValue>clientip</fieldForValue>
    </input>
	
	<input type="dropdown" searchWhenChanged="true" token="action">
      <label>Select Action:</label>
      <default>*</default>
      <search>
        <query>index=netscaler eventtype=ns_appfw | dedup action | table action</query>
      </search>
      <choice value="*">all</choice>
      <fieldForLabel>action</fieldForLabel>
      <fieldForValue>action</fieldForValue>
    </input>
	
    <input type="time" searchWhenChanged="true">
      <label>Select Time:</label>
      <default>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
