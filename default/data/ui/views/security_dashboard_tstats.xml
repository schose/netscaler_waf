<form>
  <label>Security Dashboard</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="dropdown" searchWhenChanged="true" token="host">
      <label>Netscaler</label>
      <default>*</default>
      <choice value="*">all</choice>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <populatingSearch fieldForLabel="host" fieldForValue="host">| tstats values(ns_waf.nswaf_host) as host from datamodel=netscaler_waf</populatingSearch>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="vhost">
      <label>Select vHost:</label>
      <default>*</default>
      <choice value="*">all</choice>
      <fieldForLabel>vhost</fieldForLabel>
      <fieldForValue>vhost</fieldForValue>
      <populatingSearch fieldForLabel="vhost" fieldForValue="vhost">| tstats values(ns_waf.nswaf_requestvhost) as vhost from datamodel=netscaler_waf where ns_waf.nswaf_host=$host$
| mvexpand vhost
| sort vhost</populatingSearch>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="country">
      <label>Select Country:</label>
      <default>*</default>
      <choice value="*">all</choice>
      <fieldForLabel>country</fieldForLabel>
      <fieldForValue>country</fieldForValue>
      <initialValue>*</initialValue>
      <populatingSearch fieldForLabel="country" fieldForValue="country">| tstats values(ns_waf.nswaf_src_country) as country from datamodel=netscaler_waf where ns_waf.nswaf_host=$host$ ns_waf.nswaf_requestvhost=$vhost$
| mvexpand country
| sort country</populatingSearch>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="src">
      <label>Select Client IP:</label>
      <default>*</default>
      <choice value="*">all</choice>
      <fieldForLabel>src</fieldForLabel>
      <fieldForValue>src</fieldForValue>
      <populatingSearch fieldForLabel="src" fieldForValue="src">| tstats values(ns_waf.nswaf_src) as src from datamodel=netscaler_waf where ns_waf.nswaf_host=$host$ ns_waf.nswaf_requestvhost=$vhost$
| mvexpand src
| sort src</populatingSearch>
    </input>
    <input type="dropdown" searchWhenChanged="true" token="action">
      <label>Select action:</label>
      <default>*</default>
      <choice value="*">all</choice>
      <fieldForLabel>action</fieldForLabel>
      <fieldForValue>action</fieldForValue>
      <populatingSearch fieldForLabel="action" fieldForValue="action">| tstats values(ns_waf.nswaf_action) as action from datamodel=netscaler_waf 
| mvexpand action
| sort action</populatingSearch>
    </input>
    <input type="time" searchWhenChanged="true">
      <label>Select Time:</label>
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  
  <row>
    <panel>
      <title>Security Metrics 
	
	  </title>
      <single>
	    <searchString><![CDATA[
		| tstats count from datamodel=netscaler_waf 
		where ns_waf.nswaf_requestvhost=$vhost$ ns_waf.nswaf_host=$host$ ns_waf.nswaf_src_country="$country$" ns_waf.nswaf_action="$action$"
		]]>
		</searchString>
        <option name="underLabel">Attacks</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
      <single>
        <searchString>
		<![CDATA[
		| tstats dc(ns_waf.nswaf_src_country) from datamodel=netscaler_waf
		where ns_waf.nswaf_requestvhost=$vhost$ ns_waf.nswaf_host=$host$ ns_waf.nswaf_src_country="$country$" ns_waf.nswaf_action="$action$"
		]]>		
		</searchString>
        <option name="underLabel">Countries</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
      <single>
        <searchString>
		<![CDATA[
		| tstats dc(ns_waf.nswaf_src) from datamodel=netscaler_waf
		where ns_waf.nswaf_requestvhost=$vhost$ ns_waf.nswaf_host=$host$ ns_waf.nswaf_src_country="$country$" ns_waf.nswaf_action="$action$"
		]]>
		</searchString>
        <option name="underLabel">Unique IPs</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>  
    <row>
    <panel>
      <chart>
        <title>Attack Type Distribution by Type Over Time</title>
        <searchString>
			<![CDATA[	
	| tstats prestats=t count from datamodel=netscaler_waf 
	where ns_waf.nswaf_requestvhost=$vhost$ ns_waf.nswaf_host=$host$ ns_waf.nswaf_src_country="$country$" ns_waf.nswaf_action="$action$"
	by _time span=1h
	| timechart span=1h count		
	]]>
		</searchString>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Attack Distribution by Country Over Time</title>
